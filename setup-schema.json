{
    "$schema": "http://json-schema.org",
    "$id": "http://yio-remote.com/homey.json",
    "type": "object",
    "title": "YIO Integration Homey Schema",
    "description": "Required data points to set up a Homey integrations.",
    "default": {},
    "additionalProperties": true,
    "required": [
        "ip"
    ],
    "properties": {
        "ip": {
            "$id": "#/properties/ip",
            "type": "string",
            "title": "IP address and port",
            "description": "The IP address and port of your Homey server.",
            "default": "",
            "examples": [
                "192.168.100.2:8936"
            ]
        }
    }
}